{
  "name": "<%= appName %>",
  "version": "0.1.0",
  "main": "./src/index.js",
  "author": "Contactlab Product Frontend Team <developer@contactlab.com>",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">= 6.0",
    "npm": ">= 5.0",
    "yarn": ">= 1.0"
  },
  "scripts": {
    "prepare": "./scripts/prepare.js",
    "postinstall": "yarn run prepare",
    "stylelint": "stylelint ./src/components/**/*.postcss",
    "lint": "eslint ./src/index.js ./src/components ./src/lib",
    "pretest": "yarn run lint",
    "test": "nyc ava",
    "prebuild": "yarn run prepare",
    "build": "webpack --progress",
    "build:dev": "yarn run build",
    "build:staging": "NODE_ENV=staging yarn run build",
    "build:production": "NODE_ENV=production yarn run build",
    "prestart": "yarn run build",
    "start": "http-server ./dist -p 8180 --silent",
    "preserver": "yarn run prepare",
    "server": "webpack-dev-server --hot",
    "saray": "saray --port 3000 --path ./stubbs --root <%= sarayRoot %> --dynpath _",
    "dev": "run-p -cn saray server"
  },
  "dependencies": {
    "@polymer/polymer": "next",
    "contactlab-ui-components": "2.0.0",
    "contactsnag": "1.1.0",
    "ikonograph": "4.0.3",
    "onesky-cli": "0.0.2",
    "polymer-redux": "1.0.3",
    "redux": "3.7.2",
    "redux-devtools-extension": "2.13.2",
    "redux-router5": "5.0.0",
    "router5": "5.1.7",
    "router5-helpers": "5.0.0",
    "web-animations-js": "2.3.1"
  },
  "devDependencies": {
    "ava": "0.22.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.0",
    "babel-loader": "7.1.2",
    "babel-plugin-syntax-object-rest-spread": "6.13.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-register": "6.26.0",
    "cssnano": "3.10.0",
    "eslint-config-contactlab": "1.0.0",
    "fs-extra": "4.0.2",
    "glob": "7.1.2",
    "http-server": "0.10.0",
    "lost": "8.2.0",
    "npm-run-all": "4.1.1",
    "nyc": "11.2.1",
    "ora": "1.3.0",
    "pify": "3.0.0",
    "postcss-cssnext": "2.11.0",
    "postcss-easing-gradients": "1.2.3",
    "postcss-loader": "2.0.6",
    "postcss-reporter": "5.0.0",
    "saray": "1.7.4",
    "stylelint": "8.1.1",
    "stylelint-config-standard": "17.0.0",
    "text-loader": "0.0.1",
    "uglifyjs-webpack-plugin": "0.4.6",
    "web-component-tester": "6.1.5",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.8.2",
    "onesky:download": "onesky-cli download",
    "onesky:upload": "onesky-cli upload"
  },
  "ava": {
    "files": [
      "./src/components/**/test/unit.js",
      "./src/lib/**/test/*.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "comments": false,
    "compact": true,
    "presets": [
      "es2015"
    ],
    "plugins": [
      "syntax-object-rest-spread",
      "transform-object-rest-spread"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11"
  ],
  "bugsnag": {
    "apiKey": "<%= bugsnag %>",
    "minifiedUrl": "https://<%= appName %>.contactlab.it/app.js",
    "sourceMap": "dist/app.js.map",
    "minifiedFile": "dist/app.js"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "extends": [
      "contactlab"
    ],
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true
    },
    "plugins": [],
    "settings": {}
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "**/_helpers.js",
      "**/unit.js"
    ]
  },
  "oneSkyCli": {
    "path": "src/i18n",
    "apiKey": "<%= oneskyApiKey %>",
    "secret": "<%= oneskySecret %>",
    "projectId": "<%= oneskyProjectId %>",
    "languages": ["it", "en"],
    "fileName": "en.json"
  }
}
